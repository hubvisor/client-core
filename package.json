{
  "name": "@hubvisor/client-core",
  "version": "0.1.0",
  "description": "Hubvisor Core Library for client-side projects",
  "author": "Hubvisor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hubvisor/core.git"
  },
  "homepage": "https://github.com/hubvisor/core",
  "bugs": {
    "url": "https://github.com/hubvisor/core/issues"
  },
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "prepare": "yarn build",
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "coverage": "jest --coverage",
    "dev": "nodemon -w src --exec 'yarn fix && yarn build:esm'",
    "prebuild": "rm -rf dist",
    "build:esm": "mkdir -p dist/esm && NODE_ENV=production babel src --out-dir dist/esm",
    "build:cjs": "mkdir -p dist/cjs && NODE_ENV=production MODULE_TYPE=cjs babel src --out-dir dist/cjs",
    "doc": "jsdoc src/** -d docs",
    "build": "yarn doc && yarn build:esm"
  },
  "devDependencies": {
    "@hubvisor/build-core": "^0.1.2"
  }
}
